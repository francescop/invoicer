<div class="controls">
<fieldset>
	<%= f.select :fieldtype, field_types, :class => "span2" %>
	<%= f.text_field :title, placeholder: t("Description"), :class => "span2" %>
	<%= f.text_field :units, placeholder: t("Units"), :class => "span1" %>
	<%= f.text_field :rate, placeholder: t("Rate"), :class => "span1" %>
	<%= f.text_field :amount, placeholder: t("Total"), :class => "span2" %>
	<%= f.hidden_field :_destroy %>
	<%= link_to t("[remove]"), "#", class: "remove_fields" %>
</fieldset>
</div>
