<div class="row">
	<article class="span12 dark data-block">
		<header>
			<h2><%= t('Invoice') %> <%= @invoice.invoicenumber if @invoice.invoicenumber %></h2>
			<ul class="data-header-actions">
				<li class=""><%= link_to t('Back'), invoices_path %></li>
				<li class=""><%= link_to t('Edit'), edit_invoice_path(@invoice), :class => "btn btn-alt" %></li>
			</ul>
		</header>
		
		<section>
			<p>
			  <b><%= t('Type') %>:</b>
			  <%= @invoice.invoicetype %>
			</p>
			
			<p>
			  <b><%= t('Status') %>:</b>
			  <%= @invoice.status %>
			</p>
			
			<p>
			  <b><%= t('Expiredate') %>:</b>
			  <%= @invoice.expiredate %>
			</p>
			
			<p>
			  <b><%= t('Customer') %>:</b>
			  <%= @invoice.customer.fullname %>
			</p>
			
			<table class="table table-bordered table-striped">
									<thead>
										<tr>
											<th><%= t('Description') %></th>
											<th><%= t('Units') %></th>
											<th><%= t('Rate') %></th>
											<th><%= t('Price') %></th>
										</tr>
									</thead>
									<tbody>
										<% @invoice.invoicefields.each do |field| %>
										<tr>
											<td><%= field.title %></td>
											<td><%= field.units %></td>
											<td><%= field.rate %></td>
											<td><%= field.amount.to_s %><% if field.fieldtype.start_with?("percentage") %> % <% end %>  </td>
										</tr>
										<% end %>
										<tr>
											<td>
												<strong><%= t('Total') %></strong>
											</td>
											<td></td>
											<td></td>
											<td><strong><%= @invoice.amount %></strong></td>
										</tr>
										
									</tbody>
								</table>
			
		</section>
		
	</article>
</div>
