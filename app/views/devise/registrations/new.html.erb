<div class="row">

	<article class="span12 dark data-block">
						<header>
							<h2>Sign up</h2>
						</header>
						<section class="tab-content">
							<!-- Tab #horizontal -->
							<div id="horizontal" class="tab-pane active span6">				
									<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  										<%= devise_error_messages! %>								
									  	<form class="form-horizontal no-margin">
											<fieldset>

												<div class="control-group">
													<%= f.label :email, :class => "control-label" %>
													<div class="controls">
														<%= f.email_field :email, :autofocus => true, :class => "input-xlarge" %>
													</div>
												</div>

												<div class="control-group">
  													<%= f.label :companyname, :class => "control-label" %>
  													<div class="controls">
  														<%= f.text_field :companyname, :class => "input-xlarge" %>
  													</div>
  												</div>
  												
  												<div class="control-group">
  													<%= f.label :lang, :class => "control-label" %>
  													<div class="controls">
  														<%= f.select :lang, User::LANGS %>
  													</div>
  												</div>
  												
  												<div class="control-group">
  													<%= f.label :password, :class => "control-label" %>
  													<div class="controls">
  													<%= f.password_field :password, :autocomplete => "off", :class => "input-xlarge" %>
  													</div>
  												</div>
  
  												<div class="control-group">
												    <%= f.label :password_confirmation, :class => "control-label" %>
												    <div class="controls">
												  	<%= f.password_field :password_confirmation, :class => "input-xlarge" %>
												  	</div>
												 </div>
												
												  

												<div class="form-actions">
													<%= f.submit 'Sign up', :class => "btn btn-alt btn-large btn-primary" %>
												</div>
												
											</fieldset>
										
									
														
									</form>
								<% end %>
								
								
								<%= render "devise/shared/links" %>
							</div>
							<!-- /Tab #horizontal -->
						</section>
	</article>
</div>















