<div class="row">

	<article class="span12 dark data-block">
						<header>
							<h2>Sign in</h2>
						</header>
						<section class="tab-content">
							<!-- Tab #horizontal -->
							<div id="horizontal" class="tab-pane active span6">				
									<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
										<form class="form-horizontal no-margin">
											<fieldset>
												<div class="control-group">
													<%= f.label :email, :class => "control-label" %>
													<div class="controls">
														<%= f.email_field :email, :autofocus => true, :class => "input-xlarge" %>
													</div>
												</div>
												
												<div class="control-group">
													<%= f.label :password, :class => "control-label" %>
													<div class="controls">
														<%= f.password_field :password, :class => "input-xlarge" %>
													</div>
												</div>
												
												<% if devise_mapping.rememberable? -%>
												    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
												<% end -%>
												
												<div class="form-actions">
													<%= f.submit 'Sign in', :class => "btn btn-alt btn-large btn-primary" %>
												</div>
												
											</fieldset>
										
									
									
									<%= render "devise/shared/links" %>						
									</form>
								<% end %>
							</div>
							<!-- /Tab #horizontal -->
						</section>
	</article>
</div>
