<% if params[:action] == 'index' %>
	<% remoteform = true %> 
<% else %>
	<% remoteform = false %>
<% end %>

<%= form_for(@invoice, html:{class:"form-horizontal no-margin"}, :remote => remoteform)  do |f| %>

 <% if @invoice.errors.any? %>
    <div class="alert alert-error fade in">
    	<button data-dismiss="alert" class="close">Ã—</button>
      <strong><%= pluralize(@invoice.errors.count, "error") %> prohibited this customer from being saved:</strong>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<form class="form-horizontal no-margin">
		<fieldset>
			<div class="control-group">
		  	<%= f.label :invoicenumber, :class => "control-label" %>
			<div class="controls">
				<div class="input-append no-margin">
					<%= f.text_field :invoicenumber, :value => Invoice.last.invoicenumber.to_i + 1 %>
				</div>
			</div>
		  </div>
		  
		   <div class="control-group">
		  	<%= f.label :invoicetype, :class => "control-label" %>
			<div class="controls">
				<div class="input-append no-margin">
					<%= f.select :invoicetype, Invoice::INVOICE_TYPES, :selected => params[:invoicetype], :include_blank => true %>
				</div>
			</div>
		  </div>
		
		  <div class="control-group">
		  	<%= f.label :status, :class => "control-label" %>
			<div class="controls">
				<div class="input-append no-margin">
					<%= f.select :status, Invoice::INVOICE_STATUS %>
				</div>
			</div>
		  </div>
		    
		  <div class="control-group">
		  	<%= f.label :expiredate, :class => "control-label" %>
			<div class="controls">
				<div class="input-append no-margin">
					<%= f.text_field :expiredate, :class => "input-small", :value => 4.weeks.from_now.strftime("%d/%m/%Y") %><span class="add-on"><i class="icon-calendar"></i></span>
				</div>
			</div>
		  </div>
		    
		
		  <div class="control-group">
		  	<%= f.label :customer_id, :class => "control-label" %>
			<div class="controls">
				<div class="input-append no-margin">
					<%= f.select(:customer_id, Customer.all.collect {|a| [a.fullname, a.id]}, :include_blank => true ) -%>
				</div>
			</div>
		  </div>
		  
		  <div class="control-group">
		  	<%= f.label :amount, :class => "control-label" %>
			<div class="controls">
				<div class="input-append no-margin">
					<%= f.text_field :amount %>
				</div>
			</div>
		  </div> 

			<div class="form-actions">
				<%= f.submit 'Save changes', :class => "btn btn-alt btn-large btn-primary", :remote => false %>
			</div>
		</fieldset>
	</form>
<% end %>



<%= javascript_include_tag "bootstrap-datepicker" %>

<script>
			$(document).ready(function() {
				$('#invoice_expiredate').datepicker({
					"autoclose": true
				});

			});
		</script>
